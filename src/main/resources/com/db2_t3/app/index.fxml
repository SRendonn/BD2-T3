<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.db2_t3.app.IndexController"
            hgap="10" vgap="10" alignment="center">
    <Label text="Bienvenido" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Parámetros de Oracle" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" spacing="10">
            <children>
                <Label text="Usuario" />
                <TextField fx:id="usuarioInput" />
            </children>
        </HBox>
        <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" spacing="10">
            <children>
                <Label text="Contraseña" />
                <PasswordField fx:id="contraInput" />
            </children>
        </HBox>
        <HBox GridPane.rowIndex="4" GridPane.columnIndex="0" spacing="10">
            <children>
                <Label text="Puerto" />
                <TextField fx:id="puertoInput" />
            </children>
        </HBox>


    <Label text="Parámetros de MongoDB" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

    <Button fx:id="guardarYMenu" text="Guardar e ir al menú" onAction="#irAlMenu" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <padding>
        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
    </padding>

</GridPane>
